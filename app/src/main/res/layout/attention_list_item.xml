<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:id="@+id/content_rl"
        android:background="#ffffff" >



        <ImageView
            android:id="@+id/zaina_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/author_head_default" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/zaina_avatar"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/zaina_avatar"
            android:singleLine="true"
            android:text="清风飘雪"
            android:textColor="#666666"
            android:textSize="13sp" />
        
        <ImageView android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/femail"
            android:layout_toRightOf="@+id/name_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@+id/name_tv"
            android:id="@+id/sex_iv"
            />

        <LinearLayout
            android:id="@+id/lasttime_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_tv"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共抢了"
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/createcount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orangetext"
                android:textSize="12sp" />
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:text="个红包"
                android:textSize="12sp" />
        </LinearLayout>
        
        
        <TextView   android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/attention_tv"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="+关注"
                android:textSize="14sp"
                android:background="@drawable/envelopes_text_bg"
                android:textColor="#FF4040"
                 />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/content_rl"
        android:background="#3fc2c2c2" />
</RelativeLayout>