<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:text="提示:"
        android:textColor="@color/dialog_text_btn_red_bg"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:id="@+id/input_psd_et"
        android:paddingTop="8dp"
        android:paddingLeft="6dp"
        android:hint="@string/input_psd_hint"
        android:paddingBottom="8dp"
        android:background="@drawable/dialog_edit_bg_selector"
        />

    <LinearLayout
        android:id="@+id/btn_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_psd_et"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/postive_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_postive_text_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/negtive_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_negitive_text_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/dialog_text_btn_red_bg"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>