<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_bottom_root_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >



    <RelativeLayout
        android:id="@+id/envelope_rl"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/envelope_tv"
            android:gravity="bottom"
            android:text="今日剩余可玩次数"
            android:textColor="@color/graytext"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/new_choose_jiantou" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top_info_rl"
        android:layout_below="@+id/envelope_rl"
        android:layout_height="80dp" >

        <View
            android:id="@+id/top_v"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="@color/fragment_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/lastplaycounts_tv"
            android:gravity="bottom"
            android:text="0"
            android:textColor="@color/cancel_btn_text"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/lastplaycounts_recharge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/envelopes_text_bg"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="增加次数"
            android:textColor="@color/envelopes_item_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>