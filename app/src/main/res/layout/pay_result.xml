<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavPage"
    android:background="#fff" >

    <ImageView
        android:id="@+id/title_logo_iv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/pay_logo" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_logo_iv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="充值成功"
        android:textColor="@color/title_tab_bg_color"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/result_detail_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="本次充值 "
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/goldsize_tv"
            android:text="100"
            android:textColor="@color/title_tab_bg_color"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" 金币已成功到账"
            android:textColor="#ff999999"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ikow"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/result_detail_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/title_tab_bg_color"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="我知道了"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/showmoney_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_ikow"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="查看余额"
        android:textColor="@color/title_tab_bg_color"
        android:textSize="14sp" />

</RelativeLayout>