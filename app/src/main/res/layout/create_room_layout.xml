<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_sc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/new_fragmentbg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="15dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:id="@+id/envelope_type_rl"
    android:background="@drawable/shape_white_corner_stroke"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/my_envelope_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/envelope_type_tv"
        android:text="猜金额红包"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dialog_text_btn_red_bg"
        android:textSize="18sp" />

</RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/envelope_type_rl"
            >

        <RelativeLayout
            android:id="@+id/room_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="房间名称"
                android:id="@+id/room_name_tv"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/room_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/room_name_tv"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/dialog_edit_bg_selector"
                android:gravity="left|center_vertical"
                android:hint="请输入房间名称"
                android:maxLength="12"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
android:paddingLeft="18dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textCursorDrawable="@null"
                android:textSize="15.0sp" />
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/room_psd_rl"
                android:layout_below="@+id/room_name_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="房间密码"
                    android:id="@+id/room_psd_tv"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/room_psd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/room_psd_tv"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/dialog_edit_bg_selector"
                    android:gravity="left|center_vertical"
                    android:hint="请输入房间密码（可不输入，默认无密码）"

                    android:inputType="number"
                    android:maxLength="12"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="18dp"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/room_person_size_rl"
                android:layout_below="@+id/room_psd_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="最大人数"
                    android:id="@+id/room_person_size_tv"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/room_person_size_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/room_person_size_tv"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/dialog_edit_bg_selector"
                    android:gravity="left|center_vertical"
                    android:hint="请输入最多加入人数（可不输入，默认无限制）"
                    android:inputType="number"
                    android:maxLength="12"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="18dp"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15.0sp" />
            </RelativeLayout>
        

           <RelativeLayout
            android:id="@+id/room_cansee_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
               android:layout_marginTop="30dp"
            android:layout_below="@+id/room_person_size_rl" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="房间可见"
                android:id="@+id/permission_tv"
                android:textColor="#333333"
                android:textSize="14sp" />

            <go.fast.fastenvelopes.view.NiceSpinner
                android:id="@+id/room_cansee_nsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/permission_tv"
                android:gravity="right|center_vertical"
                android:hint="请选择可见权限"
                android:paddingLeft="10dp"
                android:textSize="12.0sp" >
            </go.fast.fastenvelopes.view.NiceSpinner>
        </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dialog_postive_text_bg"
                android:text="立即创建"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_below="@+id/room_cansee_rl"
                android:layout_marginTop="50dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>