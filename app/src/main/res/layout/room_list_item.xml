<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:background="@drawable/shape_white_corner_stroke"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <go.fast.fastenvelopes.groupimageview.NineGridImageView
            android:id="@+id/gridImg_ngv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/room_headurls_bg" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gridImg_ngv"
            android:layout_centerVertical="true"
            >
            <go.fast.fastenvelopes.widgets.ForcedTextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="bottom"
                android:maxWidth="160dp"
                android:singleLine="true"
                android:text="清风飘雪"
                android:textColor="#333333"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_ll"
                android:layout_below="@+id/name_tv"
                android:layout_marginTop="8dp"
                >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/time_icon" />


                <go.fast.fastenvelopes.widgets.ForcedTextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:maxWidth="260dp"
                    android:singleLine="true"
                    android:text="2017.1.12"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personsize_ll"
                android:layout_below="@+id/time_ll"
                android:layout_marginTop="8dp"
                >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/personsize_icon" />


                <go.fast.fastenvelopes.widgets.ForcedTextView
                    android:id="@+id/personsize_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="bottom"
                    android:maxWidth="160dp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="89人"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

            <go.fast.fastenvelopes.widgets.ForcedTextView
                android:id="@+id/roomid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_below="@+id/personsize_ll"
                android:ellipsize="marquee"
                android:background="@drawable/roomid_bg_icon"
                android:focusable="true"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="房间号：55"
                android:textColor="@color/envelopes_item_text_color"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/islock_iv"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/envelope_type_tv"
                android:layout_centerVertical="true"
                android:src="@drawable/author_head_default" />

            <TextView
                android:id="@+id/envelope_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/envelopes_text_bg"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="猜金额红包"
                android:textColor="@color/envelopes_item_text_color"
                android:textSize="12sp" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>